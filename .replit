# Replit configuration for YatraGenie

# Run both servers
run = ["bash", "-c", "cd backend && python -m uvicorn backend.main:app --host 0.0.0.0 --port 8000 & cd ../frontend && npm install && npm run dev"]

# Language
language = "python3"

# Entry point
entrypoint = "backend/main.py"

# Environment variables
[env]
PYTHONPATH = "${PYTHONPATH}:."
NEXT_PUBLIC_API_BASE_URL = "http://localhost:8000"

# Packages to install
[packages]
python = "3.9"

# Always on (for web services)
[deploy]
run = ["bash", "-c", "cd backend && pip install -r requirements.txt && uvicorn backend.main:app --host 0.0.0.0 --port 8000"]
